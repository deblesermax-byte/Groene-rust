---
import { Image } from 'astro:assets';
import heroImage from '../images/Chalet zomer (1).jpg';
---

<section id="home" class="relative h-screen">
  <div class="absolute inset-0">
    <Image
      src={heroImage}
      alt="Chalet Groenerust in de zomer"
      class="w-full h-full object-cover"
      loading="eager"
    />
    <div class="absolute inset-0 bg-black bg-opacity-40"></div>
  </div>

  <div class="relative z-10 h-full flex items-center justify-center text-center px-4">
    <div class="max-w-4xl">
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 drop-shadow-lg">
        Ontdek de nieuwe chalet<br/>'groenerust'
      </h1>
      <p class="text-2xl md:text-3xl text-white mb-8 drop-shadow-lg">
        Jouw oase van rust in de Ardennen
      </p>
      <a
        href="#contact"
        class="inline-block bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-8 rounded-lg text-lg transition-colors duration-300 shadow-lg"
      >
        Reserveer Nu
      </a>
    </div>
  </div>

  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#about" class="text-white text-4xl">â†“</a>
  </div>
</section>
