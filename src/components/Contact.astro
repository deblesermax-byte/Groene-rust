<section id="contact" class="py-20 bg-green-50">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-4 text-gray-800">
        Contact & Reservering
      </h2>
      <p class="text-center text-gray-600 mb-12 text-lg">
        Vul onderstaand formulier in om jouw verblijf te boeken
      </p>

      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <form name="groenerust-contact" method="POST" data-netlify="true" class="space-y-6">
            <input type="hidden" name="form-name" value="groenerust-contact" />

            <div>
              <label for="naam" class="block text-gray-700 font-medium mb-2">
                Naam <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="naam"
                name="naam"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent outline-none transition"
              />
            </div>

            <div>
              <label for="email" class="block text-gray-700 font-medium mb-2">
                E-mail <span class="text-red-500">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent outline-none transition"
              />
            </div>

            <div>
              <label for="telefoon" class="block text-gray-700 font-medium mb-2">
                Telefoonnummer <span class="text-red-500">*</span>
              </label>
              <input
                type="tel"
                id="telefoon"
                name="telefoon"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent outline-none transition"
              />
            </div>

            <div>
              <label for="personen" class="block text-gray-700 font-medium mb-2">
                Aantal personen <span class="text-red-500">*</span>
              </label>
              <select
                id="personen"
                name="personen"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent outline-none transition"
              >
                <option value="">Selecteer aantal</option>
                <option value="1">1 persoon</option>
                <option value="2">2 personen</option>
                <option value="3">3 personen</option>
                <option value="4">4 personen</option>
                <option value="5">5 personen</option>
                <option value="6">6 personen</option>
              </select>
            </div>

            <div>
              <label for="huisdier" class="block text-gray-700 font-medium mb-2">
                Huisdier <span class="text-red-500">*</span>
              </label>
              <select
                id="huisdier"
                name="huisdier"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent outline-none transition"
              >
                <option value="">Selecteer</option>
                <option value="nee">Nee</option>
                <option value="ja">Ja</option>
              </select>
            </div>

            <div>
              <label for="bericht" class="block text-gray-700 font-medium mb-2">
                Bericht (data, bijzondere verzoeken, etc.) <span class="text-red-500">*</span>
              </label>
              <textarea
                id="bericht"
                name="bericht"
                rows="5"
                required
                placeholder="Vermeld hier graag de gewenste aankomst- en vertrekdatum..."
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent outline-none transition resize-none"
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-8 rounded-lg text-lg transition-colors duration-300 shadow-lg hover:shadow-xl"
            >
              Verstuur Aanvraag
            </button>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="space-y-8">
          <div class="bg-white rounded-lg shadow-lg p-8">
            <h3 class="text-2xl font-bold mb-6 text-gray-800">Adres</h3>
            <div class="space-y-4 text-gray-700">
              <p class="flex items-start">
                <svg class="w-6 h-6 text-green-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span>
                  Domaine Le Bochetay<br/>
                  Chalet nr. 177<br/>
                  Rue du Bochetay<br/>
                  5377 Somme-Leuze (Heure)
                </span>
              </p>
            </div>
            <a
              href="https://maps.google.com/?q=Domaine+Le+Bochetay+Chalet+177+Rue+du+Bochetay+5377+Somme-Leuze"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block mt-6 text-green-600 hover:text-green-700 font-semibold transition-colors"
            >
              Bekijk locatie op Google Maps →
            </a>
          </div>

          <div class="bg-gradient-to-br from-green-600 to-green-700 rounded-lg shadow-lg p-8 text-white">
            <h3 class="text-2xl font-bold mb-4">Afstanden</h3>
            <ul class="space-y-3">
              <li class="flex items-center">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 1.414L10.586 9H7a1 1 0 100 2h3.586l-1.293 1.293a1 1 0 101.414 1.414l3-3a1 1 0 000-1.414z" clip-rule="evenodd"></path>
                </svg>
                <span>12 km van Durbuy</span>
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 1.414L10.586 9H7a1 1 0 100 2h3.586l-1.293 1.293a1 1 0 101.414 1.414l3-3a1 1 0 000-1.414z" clip-rule="evenodd"></path>
                </svg>
                <span>8 km van Marche-en-Famenne</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<footer class="bg-gray-800 text-white py-8">
  <div class="container mx-auto px-4 text-center">
    <p class="text-gray-400">
